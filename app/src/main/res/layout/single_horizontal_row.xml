<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_h_card"
        android:padding="5dp"
        android:layout_width="120dp"
        android:layout_height="150dp"
        >


        <RelativeLayout
            android:id="@+id/top_h_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/square_white">


            <ImageView
                android:id="@+id/iv_h_song_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tv_song_name"
                android:scaleType="centerCrop"
               />

            <TextView
                android:id="@+id/tv_h_song_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="bottom"
                android:background="#ffffff"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:singleLine="true"
                android:text="Cadburry"
                android:textColor="#000000"
                android:textSize="13sp" />


        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>